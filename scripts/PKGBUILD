# Maintainer: Cody Dostal <dostalcody@gmail.com>
# This is NOT ready for use yet. If you install this, wifiz will be removed, and you will be left with the unfunctional NetGUI.
# This is just being set up in advance.

pkgname=netgui
_gitname=netgui
pkgver=0.4
pkgrel=1
pkgdesc="GUI for netctl, unstable version."
arch=('any')
url="https://bitbucket.org/codywd/$_gitname"
license=('MIT')
depends=('python' 'python-gobject' 'wireless_tools' 'netctl')
makedepends=('git')
provides=('netgui')
conflicts=('netcfg', 'wicd', 'networkmanager')
replaces=('wifiz', 'wifiz-git')
options=(!emptydirs)
source=('git://github.com/codywd/$_gitname.git')
md5sums=('SKIP')
sha256sums=('SKIP')

pkgver() {
  cd $srcdir/wifiz-nightly
  # Use the tag of the last commit
  git describe --always --long | sed -E 's/([^-]*-g)/r\1/;s/-/./g'
}

package() {
  cd $srcdir/$_gitname
  pwd
  python2 setup.py install --root="$pkgdir/" --optimize=1
}
